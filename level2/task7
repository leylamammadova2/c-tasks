#include <iostream>
using namespace std;

int main() {
    double a, b;
    char op;

    cout << "Birinci ededi daxil edin: ";
    cin >> a;

    cout << "Ikinci ededi daxil edin: ";
    cin >> b;

    cout << "Emeliyyati secin (+, -, *, /): ";
    cin >> op;

    switch (op) {
        case '+':
            cout << "Netice: " << a + b << endl;
            break;

        case '-':
            cout << "Netice: " << a - b << endl;
            break;

        case '*':
            cout << "Netice: " << a * b << endl;
            break;

        case '/':
            if (b != 0)
                cout << "Netice: " << a / b << endl;
            else
                cout << "Sifira bolme olmaz!" << endl;
            break;

        default:
            cout << "Duzgun emeliyyat daxil edilmedi!" << endl;
    }

    return 0;
}
