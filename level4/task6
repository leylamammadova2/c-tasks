#include <iostream>
using namespace std;

int main() {
    int N, x;
    cin >> N >> x;

    int mn = x, mx = x;
    long long sum = x;

    for (int i = 1; i < N; i++) {
        cin >> x;
        if (x < mn) mn = x;
        if (x > mx) mx = x;
        sum += x;
    }

    cout << mn << " " << mx << " " << (double)sum / N;
}