#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "ededlÉ™ri daxil edin : ";
    cin >> n;

    int sum = 0;

    for (int i = 1; i <= n; i++) {
        if (i % 2 == 0) {
            sum += i * i;
        }
    }

    cout << "Cut ededlerin kvadratlarinin cemi: " << sum;
    return 0;
}